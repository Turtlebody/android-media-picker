<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="App.Button.Primary" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/md_grey_500</item>
        <item name="colorAccent">@color/tb_media_picker_accent</item>
        <!--<item name="colorControlHighlight">@color/colorAccent</item>-->
    </style>

    <style name="App.ProgressBar.Primary" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/tb_media_picker_accent</item>
    </style>

    <style name="App.Dialog.BottomSheet" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <!--For progress indicator for progressBar-->
    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/tb_media_picker_accent</item>
        <!--<item name="android:progressBackgroundTint">@color/colorPrimary</item>-->
    </style>

    <style name="TbMediaPicker.Progress.Light" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/md_white_1000</item>
    </style>

</resources>