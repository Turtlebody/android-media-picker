<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_result_icon"
        android:layout_width="@dimen/length_40"
        android:layout_height="@dimen/length_40"
        android:layout_margin="@dimen/offset_8"
        android:scaleType="centerCrop"
        android:src="@drawable/mp3_icon"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/item_result_file_name"
            style="@style/TextTitle"
            android:hint="File Name" />
    </LinearLayout>

</LinearLayout>